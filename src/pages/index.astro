const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: faqsData.map((faq) => ({
    "@type": "Question",
    name: faq.question,
    acceptedAnswer: {
      "@type": "Answer",
      text: faq.answer,
    },
  })),
};
---

<BaseLayout
  siteTitle={data.pageTitle}
  siteDescription={data.pageDescription}
  keywords={data.pageKeywords}
>
  <!-- Add FAQ schema -->
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

  <HomeHeader />
  <Welcome content={welcome} />
  <GridPrograms content={programs} />
  <CTAQuiz content={CTAQuizData} />
  <FleetComp content={fleetCompData} />

  <SofarCTA />

  <section class="my-14">
    <div class="max-w-7xl mx-auto flex justify-center">
      <GeneralFAQs client:visible />
    </div>
  </section>
  <CTAFinancing content={financingCompData} />
  <Testimonials content={testimonialsData} />
  <BlogFeed data={blogfeed} />
  <CTAColor content={CTAFlight} />
  <script src="../scripts/creativeSwiper.js"></script>
</BaseLayout>
