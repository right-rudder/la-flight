---
import BaseLayout from "../layouts/BaseLayout.astro";
import HomeHeader from "../components/HomeHeader.astro";
import CTAColor from "../components/CTAColor.astro";
import CTAFlight from "../data/CTAFlight.js";
import Testimonials from "../components/Testimonials.astro";
import testimonialsData from "../data/testimonialsData.js";
import homePage from "../data/homePage";
import GridPrograms from "../components/GridPrograms.astro";
import programs from "../data/programs";
import CTAFinancing from "../components/CTAFinancing.astro";
import financingCompData from "../data/financingComp";
import BlogFeed from "../components/BlogFeed.astro";
import Welcome from "../components/Welcome.astro";
import FleetComp from "../components/FleetComp.astro";
import fleetCompData from "../data/fleetComp";
import CTAQuiz from "../components/CTAQuiz.astro";
import CTAQuizData from "../data/CTAQuiz";
import GeneralFAQs from "../components/GeneralFAQs";
import SofarCTA from "../components/sofarCTA.astro";

const blogfeed = {
  upperHeading: "Our Blog",
  heading: "LA Flight Academy News",
  description:
    "Stay up to date with the latest news, pilot resources and updates from LA Flight.",
};

const welcome = {
  title: "Welcome to LA Flight Academy",
