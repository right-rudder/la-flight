---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HeaderLeft from "../../components/HeaderLeft.astro";
import ImageComp from "../../components/ImageComp.astro";
import { Image } from "astro:assets";
import CirrusFleetPic from "../../assets/la-flight-academy-cirrus-plane-fleet-van-nuys-flight-training-2.jpg";
import CirrusFleet2 from "../../assets/LA-Flight-Academy-Fleet-Cirrus-219EL.jpg";
import CirrusFleet3 from "../../assets/la-flight-academy-cirrus-plane-fleet-van-nuys-flight-training-7.jpg";
import CirrusFleet4 from "../../assets/la-flight-academy-cirrus-plane-fleet-van-nuys-flight-training.jpg";
import CirrusFleet5 from "../../assets/la-flight-academy-cirrus-plane-fleet-van-nuys-flight-training-9.jpg";

const cirrusImages = [CirrusFleetPic, CirrusFleet2, CirrusFleet3, CirrusFleet4, CirrusFleet5];

const header = {
  stars: true,
  imagePath: "/src/assets/la-flight-academy-cirrus-plane-fleet-van-nuys-flight-training-2.jpg",
  imageAlt: "Three LA Flight Academy aircraft on the patio",
  headerH1: `Cirrus Advanced Training`,
  paragraph: `Fly the Cirrus SR20 GTS â€” a Technically Advanced Aircraft (TAA) equipped with modern glass avionics, dual GPS, and autopilot. Whether you're pursuing your instrument rating, commercial license, or building time, our Cirrus training prepares you for modern aircraft operations and airline-level proficiency.`,
  buttons: [
    {
      name: "Enroll Today",
      link: "/enroll-now",
      primary: false,
    },
  ],
};
---

<BaseLayout
  siteTitle="Cirrus Training | LA Flight Academy"
  siteDescription="Train in LA Flight Academyâ€™s 200hp Technically Advanced Aircraft (TAA) Cirrus SR20. Ideal for Instrument, Commercial, and time-building."
>
  <HeaderLeft content={header} />

  <section class="bg-white py-12 px-6">
    <div class="max-w-6xl mx-auto flex flex-col lg:flex-row gap-10">
      <!-- Left Column: Image + Description -->
      <div class="lg:w-2/3 flex flex-col gap-6">
        <Image
          src={CirrusFleet4}
          alt="Cirrus SR20 GTS at LA Flight Academy"
          class="shadow-md w-full h-72 object-cover"
          widths={[240, 540, 720, 1080, 1440, 1980]}
          sizes={`(max-width: 240px) 240px, (max-width: 540px) 540px, (max-width: 720px) 720px, (max-width: 1080px) 1080px, (max-width: 1440px) 1440px, 1920px`}
        />
        <div>
          <h1 class="text-4xl font-bold text-primary-700 mb-4">
            Cirrus SR20 GTS Training
          </h1>
          <p class="text-lg text-gray-700">
            LA Flight Academyâ€™s 2007 Cirrus SR20 GTS (N219EL) is a Technically
            Advanced Aircraft (TAA) equipped with glass panel avionics, GPS, and
            autopilot. This aircraft is ideal for Instrument and Commercial
            training, or building high-quality flight time in a modern platform.
          </p>
        </div>
        <div class="max-w-4xl">
          <h2 class="text-3xl font-semibold text-primary-700 mb-4">
            Aircraft Specs
          </h2>
          <ul class="list-disc list-inside text-gray-700 space-y-2">
            <li>Tail Number: N219EL</li>
            <li>2007 Cirrus SR20 GTS</li>
            <li>200 horsepower</li>
            <li>Avidyne PFD with Dual Garmin 430 GPS</li>
            <li>Autopilot</li>
            <li>IFR Certified</li>
            <li>Technically Advanced Aircraft (TAA)</li>
          </ul>
          <p class="mt-4 font-semibold text-gray-800">
            ðŸ’° Rates: $275/hour or $255/hour with block (wet)
          </p>
        </div>
      </div>

      <!-- Right Column: CTA Box -->
      <div
        class="lg:w-1/3 bg-primary-700 text-white p-6 flex flex-col justify-around items-center"
      >
        <div>
          <h2 class="text-2xl font-bold mb-4">What You Need to Start</h2>
          <ul
            class="list-disc list-inside text-left text-white mx-auto max-w-md space-y-2"
          >
            <li>Private Pilot Certificate</li>
            <li>Valid FAA Medical Certificate (3rd class or higher)</li>
            <li>Basic GPS and navigation proficiency</li>
            <li>Recent flight review if returning to training</li>
          </ul>
        </div>
        <div>
          <h2 class="text-2xl font-semibold mb-4">Ready to Get Started?</h2>
          <ul class="list-disc list-inside space-y-2 mb-6">
            <li>Train in a TAA-qualified Cirrus</li>
            <li>Perfect for Instrument and Commercial</li>
            <li>$275/hr or $255/hr block rate</li>
          </ul>
        </div>
        <a href="/enroll-now#form" class="btn-accent"> Enroll Now </a>
      </div>
    </div>
  </section>

  <!-- Use Cases -->
  <section class="bg-white py-12 px-6">
    <h2 class="text-3xl font-bold text-primary-700 text-center mb-8">
      Excellent For
    </h2>
    <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-xl font-bold text-primary-700 mb-2">
          <a href="/programs/instrument-rating" class="hover:underline">
            Instrument Training
          </a>
        </h3>
        <p class="text-gray-700">
          The Cirrus is IFR certified and equipped with dual GPS and autopilot â€”
          perfect for training under the hood or preparing for your checkride.
        </p>
      </div>
      <div>
        <h3 class="text-xl font-bold text-primary-700 mb-2">
          <a href="/programs/commercial-pilot" class="hover:underline">
            Commercial License
          </a>
        </h3>
        <p class="text-gray-700">
          This aircraft qualifies as a TAA, which fulfills FAA commercial
          training requirements under <a class="text-blue-500 hover:underline" href="https://www.govinfo.gov/content/pkg/CFR-2025-title14-vol2/pdf/CFR-2025-title14-vol2-sec61-129.pdf" target="_blank" rel="noopener noreferrer">14 CFR Â§61.129(j)</a>.
        </p>
      </div>
      <div>
        <h3 class="text-xl font-bold text-primary-700 mb-2">Time Building</h3>
        <p class="text-gray-700">
          Build flight hours with comfort, speed, and advanced avionics in a
          platform widely used by private and charter operators.
        </p>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="relative py-16 px-6 text-center">
    <div class="absolute -z-30 inset-0" aria-hidden="true">
      <ImageComp
        imagePath="/src/assets/la-flight-academy-cirrus-plane-fleet-van-nuys-flight-training-7.jpg"
        imageAlt="LA flight academy aircraft flying over Los Angeles, California"
        loading="eager"
        styles="absolute object-cover h-full w-full object-center -z-50"
        widths={[240, 540, 720, 1080, 1440, 1980]}
        sizes={`(max-width: 240px) 240px, (max-width: 540px) 540px, (max-width: 720px) 720px, (max-width: 1080px) 1080px, (max-width: 1440px) 1440px, 1920px`}
      />
      <div class="absolute bg-primary-700/70 w-full h-full z-0"></div>
    </div>
    <div class="max-w-4xl mx-auto text-white">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Fly Smarter with Technically Advanced Training
      </h2>
      <p class="text-lg md:text-xl text-gray-100 mb-6">
        The Cirrus SR20 GTS at LA Flight Academy qualifies as a <strong>Technically Advanced Aircraft (TAA)</strong>, perfect for completing your <strong>Commercial Certificate</strong> or building <strong>Instrument time</strong> in a real-world, glass-panel cockpit.
      </p>
      <p class="text-md text-gray-200 mb-8">
        Train in comfort, log required TAA time, and prepare for the next step in your aviation career â€” all in a modern Cirrus.
      </p>
      <a href="/contact-us#form" class="btn-accent"> Book a Flight </a>
    </div>
  </section>

  <!-- Image Swiper Gallery -->
  <section class="bg-white py-12 px-6">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-2xl font-bold text-primary-700 mb-6 text-center">Gallery</h2>

      <div class="swiper creativeSwiper h-[16rem] md:h-[48rem] relative">
        <div class="swiper-wrapper h-full">
          {
            cirrusImages.map((imgAsset) => (
              <div class="swiper-slide h-full">
                <Image
                  src={imgAsset}
                  alt="Cirrus SR20 training photo"
                  class="w-full h-full object-cover rounded-lg shadow-md"
                  widths={[240, 540, 720, 1080, 1440, 1980]}
                  sizes={`(max-width: 240px) 240px, (max-width: 540px) 540px, (max-width: 720px) 720px, (max-width: 1080px) 1080px, (max-width: 1440px) 1440px, 1920px`}
                />
              </div>
            ))
          }
        </div>

        <div
          class="swiper-button-prev bg-transparent text-white px-3 py-2 rounded-sm absolute top-1/2 left-2 z-10 cursor-pointer transition"
        >
        </div>
        <div
          class="swiper-button-next bg-transparent text-white px-3 py-2 rounded-sm absolute top-1/2 right-2 z-10 cursor-pointer transition"
        >
        </div>
      </div>
    </div>
  </section>

  <script src="../../scripts/creativeSwiper.js"></script>
</BaseLayout>
