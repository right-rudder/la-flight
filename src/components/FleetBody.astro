---
import FleetCard from "./FleetCard.astro";
import { Image } from "astro:assets";
import sky from "../assets/bg-clouds-from-above.webp"


const { content } = Astro.props;
---

<section class="py-12 relative">
  <Image
    src={sky}
    alt={content.imageAlt}
    width={1920}
    loading={"eager"}
    class="absolute inset-0 -z-50 object-cover object-center w-full h-full animate-slow-zoom"
  />
  <div
    class="absolute inset-0 object-cover object-center bg-gradient-to-b from-black/30 to-accent-600/30 w-full h-full -z-10"
  >
  </div>

  <div class="container mx-auto px-6 lg:px-12">
    <h2 class="text-3xl font-bold text-center text-muted-200 mb-3 drop-shadow-md">Our Fleet</h2>
    <div class="h-2 w-3/12 bg-gradient-to-r from-primary-700 via-muted-200 to-accent-700 mx-auto rounded-sm mb-8"></div>
    <div class="space-y-12">
      {content.fleet.map((plane) => (
        <FleetCard 
          name={plane.name}
          imagePath={plane.image}
          rates={plane.rates}
          description={plane.description}
          details={plane.details}
        />
      ))}
    </div>
  </div>
</section>
