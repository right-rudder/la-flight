---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
const {
  name,
  imagePath,
  rates,
  description,
  details
} = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif,webp}"
);
if (!images[imagePath]) {
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,webp}"`
  );
}

---

<div class="flex flex-col lg:flex-row items-center lg:items-start bg-white/80 rounded-lg shadow-md overflow-hidden">
  <!-- Image Section -->
  <div class="lg:w-1/2 w-full">
    <Image
      src={images[imagePath]()}
      alt={name}
      class="w-full h-64 lg:h-full object-cover"
    />
  </div>
  <!-- Details Section -->
  <div class="lg:w-1/2 w-full px-6 py-8">
    <h3 class="text-2xl font-semibold text-gray-800 mb-2">{name}</h3>
    <p class="text-gray-500 text-sm mb-4">{rates}</p>
    <ul class="list-disc list-inside space-y-2">
      {details.map((detail) => (
        <li class="text-gray-600">{detail}</li>
      ))}
    </ul>
  </div>
</div>
