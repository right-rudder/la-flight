---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

const { content } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/*.{jpeg,jpg,png,gif,webp}"
);
if (!images[content.imagePath]) {
  throw new Error(
    `"${content.imagePath}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif,webp}"`
  );
}
---

<section
  class="relative lg:mt-0 h-screen lg:h-[81vh] -z-0 bg-gray-800 flex flex-col items-center justify-center overflow-hidden mt-5"
>
  <Image
    src={images[content.imagePath]()}
    alt={content.imageAlt}
    loading={"lazy"}
    class="absolute inset-0 -z-0 object-cover object-left-30 lg:object-center w-full h-full"
  />
  <div class="absolute bg-white/20 w-full h-full z-0"></div>
  <div
    class="text-white py-12 mt-20 lg:mt-0 text-right z-10 flex flex-col items-end gap-4 px-5 h-full lg:pt-28 justify-end"
  >
    <h3
      class="text-4xl md:text-4xl lg:text-6xl font-serif  md:max-w-3xl lg:max-w-6xl font-black italic tracking-wide text-black uppercase"
      set:html={content.headerH1}
    />
    <p
      class="text-base lg:text-xl mt-3 font-semibold tracking-wide text-primary-950  max-w-5xl"
      set:html={content.paragraph}
    />
    <div
      class="mt-6 w-full flex flex-wrap justify-end align-middle items-center gap-6 z-10"
    >
      {
        content.buttons.map((btn) => (
          <a
            href={btn.link}
            class={`${btn.primary ? "btn-primary" : "btn-accent"} w-full lg:px-12 text-2xl md:w-auto`}
          >
            {btn.name}
          </a>
        ))
      }
    </div>
  </div>
</section>
